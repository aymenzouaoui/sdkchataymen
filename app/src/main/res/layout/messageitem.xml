<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:orientation="horizontal"
    android:gravity="right"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:src="@drawable/michel"
        app:strokeWidth="3dp"
        app:shapeAppearanceOverlay="@style/circular"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/con"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="« Texterisi le sens large de construire comme dans « basilicam texere = construire une basilique » chez Cicéron"/>



        </com.google.android.material.card.MaterialCardView>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_check_circle_outline_24"
                app:layout_constraintTop_toBottomOf="@id/con"
                app:layout_constraintStart_toEndOf="@id/photo"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/heure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/con"
                app:layout_constraintStart_toEndOf="@id/photo"
                android:text="11:56 PM"/>

            <TextView
                android:id="@+id/espace1"
                android:layout_width="150dp"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/espace2"
        android:layout_width="90dp"
        android:layout_height="match_parent"></TextView>
</LinearLayout>
